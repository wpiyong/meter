<Window x:Class="gColor.View.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Admin Password" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="txtPassword" Width="283" Margin="4" VerticalAlignment="Center"
                 Height="32" HorizontalContentAlignment="Right" BorderThickness="1.5"
                 FontSize="12" VerticalContentAlignment="Center"></PasswordBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Label x:Name="lblHint" Visibility="Hidden">Incorrect!</Label>
            <Button x:Name="btnOk" Width="70" Margin="0,0,5,0" Click="btnOk_Click">OK</Button>
            <Button x:Name="btnCancel" Width="70" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
